<Window x:Class="CW6_WFP_Database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CW6_WFP_Database"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="AssetTextBlock" HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="Click button to load assets" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="SeeAssetsButton" Content="See Assets" HorizontalAlignment="Left" Margin="23,43,0,0" VerticalAlignment="Top" Click="SeeAssetsButton_Click" FontSize="18"/>
        <Button x:Name="ShowEmployeesButton" Content="Show Employees" HorizontalAlignment="Left" Margin="22,43,0,0" VerticalAlignment="Top" Click="ShowEmployeesButton_Click" FontSize="18" Grid.Column="1"/>
        <TextBlock x:Name="EmployeeTextBlock" HorizontalAlignment="Left" Margin="22,90,0,0" TextWrapping="Wrap" Text="Click button to load employees" VerticalAlignment="Top" FontSize="18" Grid.Column="1"/>

    </Grid>
</Window>
